<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.post.CreatePostActivity">

    <ImageButton
        android:id="@+id/postImage"
        android:layout_width="162dp"
        android:layout_height="138dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="@+id/body_post"
        app:layout_constraintStart_toStartOf="@+id/body_post"
        app:layout_constraintTop_toBottomOf="@+id/body_post"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/emailLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        android:text="Title:"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toStartOf="@+id/title_post"
        app:layout_constraintTop_toTopOf="@+id/title_post" />

    <TextView
        android:id="@+id/usernameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        android:text="Body:"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toStartOf="@+id/body_post"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/emailLabel"
        app:layout_constraintTop_toTopOf="@+id/body_post" />

    <EditText
        android:id="@+id/body_post"
        android:layout_width="305dp"
        android:layout_height="169dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/title_post"
        app:layout_constraintStart_toStartOf="@+id/title_post"
        app:layout_constraintTop_toBottomOf="@+id/title_post" />

    <EditText
        android:id="@+id/title_post"
        android:layout_width="306dp"
        android:layout_height="48dp"
        android:layout_marginTop="52dp"
        android:editable="false"
        android:ems="10"
        android:enabled="false"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/pubilsh_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="publish"
        app:layout_constraintEnd_toEndOf="@+id/postImage"
        app:layout_constraintStart_toStartOf="@+id/postImage"
        app:layout_constraintTop_toBottomOf="@+id/postImage"/>

    <ProgressBar
        android:id="@+id/progressBarPost"
        style="?android:attr/progressBarStyle"
        android:layout_width="46dp"
        android:layout_height="95dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintTop_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>