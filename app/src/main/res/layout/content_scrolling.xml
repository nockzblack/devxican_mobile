<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.post.PostActivity"
    tools:showIn="@layout/activity_post">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/author_post_img"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                tools:srcCompat="@tools:sample/avatars" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/post_branch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:text="r/Branch Chida"
                    android:textSize="18sp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/post_author_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0
"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:text="u/User"
                    android:textSize="18sp" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/post_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="Post title"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/post_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:text="@string/large_text" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#DD1D1D"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/bt_like_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#00FFFFFF"
                android:backgroundTintMode="multiply"
                android:clickable="true"
                android:foregroundTint="#00AC8F8F"
                android:paddingLeft="5dp"
                android:paddingTop="10dp"
                android:paddingEnd="5dp"
                android:paddingBottom="10dp"
                app:backgroundTint="#0043A532"
                app:backgroundTintMode="src_over"
                app:srcCompat="@android:drawable/stat_sys_upload" />

            <TextView
                android:id="@+id/likes_post"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:layout_marginTop="5dp"
                android:text="0"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/bt_disike_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#00FFFFFF"
                android:backgroundTintMode="multiply"
                android:clickable="true"
                android:foregroundTint="#00FFFFFF"
                android:paddingLeft="5dp"
                android:paddingTop="10dp"
                android:paddingEnd="5dp"
                android:paddingBottom="10dp"
                app:backgroundTint="#0043A532"
                app:backgroundTintMode="src_over"
                app:srcCompat="@android:drawable/stat_sys_download" />

            <ImageView
                android:id="@+id/img_com_post"
                android:layout_width="36dp"
                android:layout_height="30dp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="5dp"
                android:layout_weight="0"
                app:srcCompat="@android:drawable/stat_notify_chat" />

            <TextView
                android:id="@+id/com_num_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_weight="0"
                android:text="0"
                android:textSize="24sp" />

        </LinearLayout>


    </LinearLayout>

</androidx.core.widget.NestedScrollView>